<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>S-Chat</display-name>
    <servlet>
        <servlet-name>s-chat</servlet-name>
        <servlet-class>com.john.ChatClass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>xml.jsp</servlet-name>
        <jsp-file>/jsp/xml.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>xml.jsp</servlet-name>
        <url-pattern>/xml/xml.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>s-chat</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
</web-app>
